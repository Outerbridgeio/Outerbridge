{
    "name": "outerbridge",
    "version": "1.0.10",
    "private": true,
    "homepage": "https://outerbridge.io",
    "scripts": {
        "setup": "npm i -D lerna rimraf && (npx -y husky install || npx husky install)",
        "bootstrap": "rimraf **/package-lock.json && lerna bootstrap --hoist",
        "build": "lerna exec yarn build",
        "start": "cd packages/server/bin && run start",
        "dev": "lerna exec yarn dev --parallel",
        "clean": "lerna exec -- rimraf ./dist",
        "test": "lerna yarn test",
        "lint": "eslint \"**/*.{js,jsx,ts,tsx}\"",
        "lint-fix": "yarn lint --fix",
        "lint-ci": "cross-env CI=true yarn lint",
        "lint-ci-fix": "yarn lint-ci --fix"
    },
    "lint-staged": {
        "*": "yarn lint-ci-fix"
    },
    "devDependencies": {
        "@types/express": "^4.17.13",
        "@typescript-eslint/typescript-estree": "^5.39.0",
        "cross-env": "^7.0.3",
        "eslint": "^8.24.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-config-react-app": "7.0.1",
        "eslint-plugin-jsx-a11y": "6.6.1",
        "eslint-plugin-prettier": "^3.4.0",
        "eslint-plugin-react": "^7.26.1",
        "eslint-plugin-react-hooks": "4.6.0",
        "eslint-plugin-unused-imports": "2.0.0",
        "husky": "^8.0.1",
        "lerna": "^3.22.1",
        "lint-staged": "13.0.3",
        "prettier": "^2.7.1",
        "rimraf": "^3.0.2",
        "typescript": "^4.8.4"
    }
}
